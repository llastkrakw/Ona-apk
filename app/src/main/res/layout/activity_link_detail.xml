<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".main.activities.LinkDetailActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/top_bg"
        android:layout_width="match_parent"
        android:layout_height="190dp"
        android:background="@drawable/top_background_shape"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageButton
            android:id="@+id/back_to_main"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_arrow_pointing_left"
            android:background="@drawable/white_ripple"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:contentDescription="@string/copyright"/>

        <ImageButton
            android:id="@+id/search_link_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@id/link_detail_filter"
            android:src="@drawable/ic_search"
            android:background="@drawable/white_ripple"
            android:layout_marginEnd="12dp"
            android:contentDescription="@string/copyright"/>

        <ImageButton
            android:id="@+id/link_detail_filter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:src="@drawable/ic_sorting_options"
            android:background="@drawable/white_ripple"
            android:contentDescription="@string/copyright"/>


        <TextView
            android:id="@+id/link_detail_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/android_doc"
            android:layout_marginTop="10dp"
            style="@style/OnboardingTitleStyle"
            android:textSize="22sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/back_to_main"/>


        <TextView
            android:id="@+id/link_detail_subTitle"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:text="@string/android_doc_desc"
            style="@style/OnboardingContentStyle"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/link_detail_title"/>



    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/middle_box"
        android:layout_width="290dp"
        android:layout_height="160dp"
        android:layout_marginTop="140dp"
        android:background="@color/textColorWhite"
        android:elevation="8dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="8dp"
        app:cardUseCompatPadding="false"
        app:contentPadding="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageButton
                android:id="@+id/setting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_settings_filled_dark"
                android:background="@drawable/text_ripple"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="3dp"
                android:contentDescription="@string/copyright"/>


            <ImageButton
                android:id="@+id/share"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_share"
                android:background="@drawable/text_ripple"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toStartOf="@id/setting"
                android:layout_marginTop="3dp"
                android:layout_marginEnd="12dp"
                android:contentDescription="@string/copyright"/>


            <com.mikhaellopez.circularimageview.CircularImageView
                android:id="@+id/main_image_profile"
                android:layout_width="60dp"
                android:layout_height="60dp"
                app:civ_border_color="#3f51b5"
                app:civ_border_width="4dp"
                app:civ_shadow="true"
                app:civ_shadow_radius="10dp"
                app:civ_shadow_color="#3f51b5"
                android:clickable="true"
                android:focusable="true"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:background="@drawable/white_ripple"
                />

            <TextView
                android:id="@+id/username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/MainTitleStyle"
                android:text="@string/username"
                android:textColor="@color/textColorDark"
                android:textSize="18sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/main_image_profile"/>


            <RelativeLayout
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@id/username">

                <TextView
                    android:id="@+id/visibility_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/visibility"
                    style="@style/OnboardingContentStyle"
                    android:textColor="@color/textColorGrey"
                    android:textSize="14sp"
                    android:layout_alignParentStart="true"/>

                <TextView
                    android:id="@+id/clicked_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/clicked"
                    style="@style/OnboardingContentStyle"
                    android:textColor="@color/textColorGrey"
                    android:textSize="14sp"
                    android:layout_centerHorizontal="true"/>


                <TextView
                    android:id="@+id/date_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/create_at"
                    style="@style/OnboardingContentStyle"
                    android:textColor="@color/textColorGrey"
                    android:textSize="14sp"
                    android:layout_alignParentEnd="true"/>

            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@id/title">

                <TextView
                    android:id="@+id/visibility_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/public_value"
                    style="@style/MainTitleStyle"
                    android:textColor="@color/colorPrimary"
                    android:textSize="14sp"
                    android:layout_alignParentStart="true"/>

                <TextView
                    android:id="@+id/clicked_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/number"
                    style="@style/MainTitleStyle"
                    android:textColor="@color/colorPrimary"
                    android:textSize="14sp"
                    android:layout_centerHorizontal="true"/>


                <TextView
                    android:id="@+id/date_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/date"
                    style="@style/MainTitleStyle"
                    android:textColor="@color/colorPrimary"
                    android:textSize="14sp"
                    android:layout_alignParentEnd="true"/>

            </RelativeLayout>


        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:elevation="12dp">

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|bottom"
            android:src="@drawable/ic_baseline_add_circle_24"
            android:backgroundTint="@color/colorPrimaryDark"
            android:contentDescription="@string/copyright"
            android:layout_margin="16dp"
            android:elevation="12dp"
            android:focusable="true"
            android:clickable="true"
            />
    </androidx.coordinatorlayout.widget.CoordinatorLayout>

</androidx.constraintlayout.widget.ConstraintLayout>