<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    
    <style name="OnboardingTitleStyle" >
        <item name="fontFamily">@font/gilroy_bold</item>
        <item name="android:textSize">28sp</item>
        <item name="android:textColor">@color/textColorWhite</item>
    </style>

    <style name="ProfileNameStyle" parent="OnboardingTitleStyle">
        <item name="android:textColor">#212121</item>
    </style>

    <style name="MainTitleStyle" >
        <item name="fontFamily">@font/gilroy_bold</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/textColorWhite</item>
    </style>

    <style name="OnboardingContentStyle" >
        <item name="fontFamily">@font/gilroy_light</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/textColorWhite</item>
        <item name="android:lineSpacingExtra">3dp</item>
        <item name="android:lineSpacingMultiplier">1.2</item>
    </style>

    <style name="AllStyle"  parent="OnboardingContentStyle">
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="ShortTextStyle"  parent="OnboardingContentStyle">
        <item name="android:textColor">@color/textColorGrey</item>
    </style>

    <style name="NavTextStyle"  parent="ShortTextStyle">
        <item name="android:textColor">@color/textColorGrey</item>
        <item name="fontFamily">@font/gilroy_bold</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="goButton">
        <item name="fontFamily">@font/gilroy_bold</item>
        <item name="android:textColor">@color/textColorDark</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="edit_text">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:background">@drawable/texbox_add_shape</item>
        <item name="elevation">7dp</item>
        <item name="android:textColor">@color/textColorDark</item>
        <item name="fontFamily">@font/gilroy_light</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginStart">32dp</item>
        <item name="android:layout_marginEnd">32dp</item>
        <item name="android:padding">15dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="SearchView">
        <item name="floatingSearch_backgroundColor">@color/colorPrimaryDark</item>
        <item name="floatingSearch_viewSearchInputTextColor">@color/textColorWhite</item>
        <item name="floatingSearch_viewSuggestionItemTextColor">@color/textColorWhite</item>
        <item name="floatingSearch_hintTextColor">@color/textColorWhite</item>
        <item name="floatingSearch_dividerColor">@color/textColorWhite</item>
        <item name="floatingSearch_clearBtnColor">@color/textColorWhite</item>
        <item name="floatingSearch_leftActionColor">@color/textColorWhite</item>
        <item name="floatingSearch_menuItemIconColor">@color/textColorWhite</item>
        <item name="floatingSearch_suggestionRightIconColor">@color/textColorWhite</item>
        <item name="floatingSearch_actionMenuOverflowColor">@color/textColorWhite</item>
    </style>

</resources>